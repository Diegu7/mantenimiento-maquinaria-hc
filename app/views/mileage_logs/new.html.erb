<section class ="content-header" >
  <h1>
    Horometraje
    <small><%=@machine.name%></small>
  </h1>

  <ol class="breadcrumb">
		<li><i class="fa fa-cog"></i> <span>Equipos</span></li>
		<li><%= link_to "MÃ¡quinas", machines_path %></li>
        <li><%= link_to @machine.name, @machine %></li>
		<li class="active">Horometraje</li>
	</ol>
  <%= render partial: "shared/errors", locals: { obj: @mileage_log } %>
</section>

<section class="content">
  <div class="row">
    <div class="col-md-6">
      <div class="box box-success">
        <div class="box-body">
          <%= form_for [@machine, @mileage_log] do |f| %>
            <div class="form-group">
            <%= f.label :hours, "Horas" %>
            <%= f.number_field :hours, class: "form-control" %>
            </div>
            <div class="form-group">
            <%= f.label :date, "Fecha" %>
            <%= f.datetime_select :date %>
            </div>
            <div class="input-group-btn">
              <%= link_to "Cancelar", @machine, class: "btn bg-red btn-flat" %>
              <%= f.submit "Crear", class: "btn bg-green btn-flat" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>
