<h2>Please fill the form below: </h2>
<%= render partial: "shared/errors", locals: {obj: car} %>
<%= form_for(car) do |f| %>
<div class="form-group">
    <%= f.label :modelo, "Modelo" %>
    <%= f.text_field :modelo, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :description, "Descripcion: " %>
    <%= f.text_area :description , class: "form-control"%>
  </div>
  <div class="form-group">
    <%= f.label :price_per_day, "Price Per Day: Lps. " %>
    <%= f.number_field :price_per_day, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :category, "Categoria" %>
  	<%= f.select :category, Car.carTypes, class: "form-control" %>
  </div>
  <div class="btn-group" role="group">
    <%= f.submit "Save" ,class: "btn btn-default"%>
    <%= link_to "Cancel", owner_cars_path(current_user),class: "btn btn-default" %>
  </div>
<% end %>
