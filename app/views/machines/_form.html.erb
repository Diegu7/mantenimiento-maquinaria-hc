<div class="form-group">
  <%= f.label :name, "Nombre" %>
  <%= f.text_field :name, class: "form-control" %>
</div>
<div class="form-group">
  <%= f.label :machine_category_id, "Categoría" %>
  <%= f.select :machine_category_id, MachineCategory.pluck(:name, :id), {}, class: "form-control" %>
</div>
<div class="form-group">
  <%= f.label :machine_section_id, "Sección" %>
  <%= f.select :machine_section_id, MachineSection.pluck(:name, :id), {}, class: "form-control" %>
</div>
