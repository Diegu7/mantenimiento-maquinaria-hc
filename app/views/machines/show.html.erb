<section class="content-header">
  <h1>
    M치quinas
    <small><%=@machine.name%></small>
  </h1>

  <ol class="breadcrumb">
		<li><i class="fa fa-cog"></i> <span>Equipos</span></li>
		<li><%= link_to "M치quinas", machines_path %></li>
		<li class="active"><%= @machine.name %></li>
	</ol>
</section>

<section class="content">
  <div class="row">
    <div class="col-md-12">
      <div class="box box-success">
        <div class="box-body">
          <div class="col-md-4">
            <div class="col-md-8">
              <dl>
                <dt>Nombre</dt>
                <dd>&nbsp;&nbsp;&nbsp;<%=@machine.name%></dd>
                <dt>Seccion</dt>
                <dd>&nbsp;&nbsp;&nbsp;<%=@machine.machine_section.name%></dd>
              </dl>
            </div>
            <div class="col-md-4 ">
              <%= link_to "Horometraje", machine_mileage_logs_path(@machine), class: "btn bg-blue btn-flat" %>
            </div>
            <%unless @machine.image_url%>
              <%=image_tag ("favicon.png"),class: "img-responsive"%>
            <%else%>
              <%=image_tag (@machine.image_url),class: "img-responsive"%>
            <%end%>
          </div>
          <div class="col-md-8">
            <div class= "nav-tabs-custom">
              <ul class= "nav nav-tabs">
                <li class= "<%='active' if params[:tab]== 'tab1'%>">
                  <a href="#tab1" data-toggle="tab">
                    Ficha Tecnica
                    <div class="input-group-btn">
                      <%= link_to "A침adir", new_machine_technical_specification_path(@machine.id),:style=>"width: 100px", class: "btn bg-green btn-flat" %>
                    </div>
                  </a>
                </li>
                <li class= "<%='active' if params[:tab]== 'tab2'%>">
                  <a href="#tab2" data-toggle="tab">Ficha de Reg y Ejecucion</a>
                </li>
                <li class= "<%='active' if params[:tab]== 'tab3'%>">
                  <a href="#tab3" data-toggle="tab">
                    Mantenimientos Requeridos
                    <div class="input-group-btn">
                      <%= link_to "A침adir", new_machine_technical_specification_path(@machine.id),:style=>"width: 100px", class: "btn bg-green btn-flat" %>
                    </div>
                  </a>
                </li>
              </ul>
              <div class= "tab-content">
                <div class="<%= if (params[:tab] == 'tab1' || !params[:tab])then 'tab-pane active'  else 'tab-pane' end%>" id= "tab1">
                  <div class="box-body table-responsive no-padding">
                    <table class="table table-hover">
                      <thead>
                        <tr role="row">
                          <th>Especificacion</th>
                          <th>Valor</th>
                        </tr>
                      </thead>
                      <tbody>
                        <%for sheet in @datasheets %>
                          <tr>
                            <td><%=sheet.key%></td>
                            <td><%=sheet.value%></td>
                          </tr>
                        <%end%>
                      </tbody>
                    </table>
                  </div>
                </div>
                <div class="<%= if (params[:tab] == 'tab2')then 'tab-pane active'  else 'tab-pane' end%>" id= "tab2">
                  <div class="box-body table-responsive no-padding">
                    <table class="table table-hover">
                      <thead>
                        <tr role="row">
                          <th>Descripcion</th>
                          <th>Programado Para</th>
                          <th>Duracion Estimada</th>
                          <th>Se termino</th>
                          <th>Commentarios</th>
                        </tr>
                      </thead>
                      <tbody>
                        <%if @finishedMaintenances%>
                          <%for maint in @finishedMaintenances %>
                            <tr>
                              <td><%=maint.description%></td>
                              <td><%=maint.scheduled_at%></td>
                              <td><%=maint.estimated_duration%></td>
                              <td><%=maint.done_at%></td>
                              <td><%=maint.comments%></td>
                            </tr>
                          <%end%>
                        <%end%>
                      </tbody>
                    </table>
                  </div>
                </div>
                <div class="<%= if (params[:tab] == 'tab3')then 'tab-pane active'  else 'tab-pane' end%>" id= "tab3">
                  <div class="box-body table-responsive no-padding">
                    <table class="table table-hover">
                      <thead>
                        <tr role="row">
                          <th>Descripcion</th>
                          <th>Duracion Estimada</th>
                          <th>Frecuencia en Horas</th>
                          <th>Frecuencia en Dias</th>
                        </tr>
                      </thead>
                      <tbody>
                        <%if @requiredMaintenances%>
                          <%for maint in @requiredMaintenances %>
                            <tr>
                              <td><%=maint.description%></td>
                              <td><%=maint.estimated_duration%></td>
                              <td><%=maint.frequency_in_hours%></td>
                              <td><%=maint.frequency_in_days%></td>
                            </tr>
                          <%end%>
                        <%end%>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
