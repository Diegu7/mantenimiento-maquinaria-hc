<section class="content-header">
  <h1>
    Productos
    <small><%=@product.name%></small>
  </h1>

  <ol class="breadcrumb">
    <li><i class="fa fa-cog"></i> <span>Productos</span></li>
    <li>
      <%= link_to "Productos", products_path %>
    </li>
    <li class="active">
      <%= @product.name %>
    </li>
  </ol>
</section>

<section class="content">
  <div class="box box-warning">
    <div class="box-header">
      <div class="col-xs-4 item-photo">
        <img style="max-width:100%;" src=<%=@product.get_image %> />
      </div>

      <div class="col-md-8">
        <h2>Detalles</h2>
        <div class=" col-md-9 col-lg-9 box-body table-responsive no-padding">
          <table class="table table-striped">
            <tbody>
              <tr>
                <td><strong>Categoría:</strong></td>
                <td>
                  <%=@product.product_category.name %>
                </td>
              </tr>
              <tr>
                <td><strong>Marca:</strong></td>
                <td>
                  <%=@product.product_brand.name %>
                </td>
              </tr>
              <tr>
                <td><strong>Existencia Inicial:</strong></td>
                <td>
                  <%=@product.initial_stock %>
                </td>
              </tr>
              <tr>
                <td><strong>Existencia Actual:</strong></td>
                <td>
                  <%=@product.current_stock %>
                </td>
              </tr>
              <tr>
                <td><strong>Mínimo:</strong></td>
                <td>
                  <%=@product.minimum %>
                </td>
              </tr>
              <tr>
                <td><strong>Máximo:</strong></td>
                <td>
                  <%=@product.maximum %>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
</section>