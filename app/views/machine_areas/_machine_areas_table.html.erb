<div class="box box-success">
  <div class="box-header">
    <div class="box-tools">
      <%= link_to "Nueva Area",new_machine_area_path ,class:"btn bg-green btn-flat"%>
    </div>
  </div>

  <div class="box-body table-responsive no-padding">
    <table id="machine-area-table"class="table table-hover">
      <thead>
        <tr role="row">
          <th>Nombre</th>
          <th width="1"></th>
        </tr>
      </thead>
      <tbody>
          <%= render machine_areas %>
      </tbody>
    </table>
  </div>
</div>

<script type="text/javascript">
  $(document).ready(function() {
    $('#machine-area-table').DataTable({
      "info":     false,
      "pageLength": 12,
      "lengthChange": false,
      "dom": 'frt<"text-center"p>',
      "language": {
        "url": "//cdn.datatables.net/plug-ins/1.10.15/i18n/Spanish.json"
      }
    });
  } );
</script>