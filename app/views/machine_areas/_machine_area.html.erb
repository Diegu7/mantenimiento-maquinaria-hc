<tr>
	<td><%= machine_area.name %></td>
	<td>
		<div class="input-group-btn">
			<%= link_to edit_machine_area_path(machine_area), class: "btn bg-blue btn-flat" do %>
				<span class="fa fa-pencil"></span>
				<font>Editar</font>
			<% end %>

			<%= button_tag class: "btn bg-red btn-flat", "data-deletion-path": machine_area_path(machine_area) do %>
				<span class="fa fa-trash"></span>
				<font>Borrar</font>
			<% end %>
		</div>
	</td>
</tr>
